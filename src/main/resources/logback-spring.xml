<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Loki appender -->
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <http>
            <url>http://loki:3100/loki/api/v1/push</url>
        </http>
        <format>
            <!-- Labels become Loki stream selectors -->
            <label>
                <pattern>app=${spring.application.name:-Libros},host=${HOSTNAME},level=%level</pattern>
            </label>
            <!-- Log message line format -->
            <message>
                <pattern>%d{ISO8601} [%thread] %-5level %logger - %msg%n%ex</pattern>
            </message>
        </format>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOKI"/>
    </root>

    <!-- Loki4j internal debug -->
    <logger name="com.github.loki4j" level="DEBUG"/>

    <!-- Fine-grained app logs -->
    <logger name="co.edu.unimagdalena.libros" level="DEBUG"/>
</configuration>
